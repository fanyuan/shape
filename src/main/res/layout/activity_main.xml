<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="act"
            type="com.example.shape.MainActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iconfont"
            android:text="\uf105"
            android:textSize="25sp"
            android:textColor="#ff00ff"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="shape01"
            android:onClick="@{()->act.shape01()}"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="shape02"
            android:onClick="@{()->act.shape02()}"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="shape03"
            android:onClick="@{()->act.shape03()}"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="shape3"
            android:onClick="@{()->act.shape3()}"/>
    </LinearLayout>
</layout>