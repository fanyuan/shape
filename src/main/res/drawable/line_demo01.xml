<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="0">
            <shape
                android:shape="line">
                <!-- 实际显示的线 -->
                <stroke
                    android:width="1dp"
                    android:color="#fFf0BD"
                    android:dashGap="2dp"
                    android:dashWidth="4dp" />
                <!-- 形状的高度 -->
                <size android:height="@dimen/dp_32" />
            </shape>
        </rotate>
    </item>
</layer-list>